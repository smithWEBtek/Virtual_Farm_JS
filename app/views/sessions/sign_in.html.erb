<h1> Sign In </h1>

<%if current_owner%>
  <p> You are already signed in as <%=current_owner.name%>. </p>
  <%= link_to "Sign Out" , signout_path , method: 'delete' %> <br><br>
<%end%>
<br>




<% if @owner && @owner.errors.any?%>
<ul>
    <% @owner.errors.full_messages.each do |message|%>
      <li><%= message%></li>
    <%end%>
</ul>
<%end%>
<br>

<%= form_tag signin_path do %>

  <label>Name: </label><input type="text" name="owner[name]" id="name"> <br/>

  <label>Password: </label><input type="password" name="owner[password]" id="password"><br/>
  <input type="submit" value="Sign In">
<% end %>


<%= link_to "Login via Github" , "/auth/github"%>
