<h1> New Farm Owner</h1>

<% if @owner && @owner.errors.any?%>
<ul>
    <% @owner.errors.full_messages.each do |message|%>
      <li><%= message%></li>
    <%end%>
</ul>
<%end%>
<br>


<%= form_for(@owner) do |f|%>
  <div class=" <%= 'field_with_errors ' if @owner.errors.messages[:name].any?%>">
    <%= f.label :name %> <br>
    <%= f.text_field :name %> <br>
  </div>

  <div class="<%= 'field_with_errors'  if @owner.errors.messages[:password].any?%>">

    <%= f.label :password %> <br>
    <%= f.password_field :password  %> <br>
  </div>


  <div class="<%= 'field_with_errors'  if @owner.errors.messages[:money].any?%>">
    <%= f.label :money %> <br>
    <%= f.number_field :money %> <br>
  </div>

  <div class="actions">
    <%= f.submit %> <br>
  </div>

<%end%>
